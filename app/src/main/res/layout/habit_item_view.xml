<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background = "@color/RoseWhite"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/habitRecyclerViewName"
            android:layout_width="260dp"
            android:layout_height="37dp"
            android:paddingLeft="10dp"
            android:text="название"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/habitRecyclerViewNotification"
            android:layout_width="260dp"
            android:layout_height="37dp"
            android:paddingLeft="10dp"
            android:text="уведомление"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/habitRecyclerViewDay"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Пн, Пт"
            android:textSize="8pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:button="@null" />

        <TextView
            android:id="@+id/habitRecyclerViewTime"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="15:22"
            android:textSize="8pt" />
    </LinearLayout>
</LinearLayout>